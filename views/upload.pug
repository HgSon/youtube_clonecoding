extends layouts/main
block content
    .form-container
        .record-container#jsRecordContainer
            video#jsVideoPreview
            button#jsRecordBtn Start Recording
        form(action=routes.videos+routes.upload, method="post", enctype="multipart/form-data")
            .fileUpLoad
                label(for="videoFile") Video File
                input(type="file", id="videoFile", name="videoFile", required=true, accept="video/*")
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(placeholder="Description", name="description", cols="30", rows="3", required=true)
            input(type="submit", value="Upload Video")