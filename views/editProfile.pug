extends layouts/main
block content
    .form-container
        form(action=routes.users+routes.editProfile, method="post", enctype="multipart/form-data")
            .fileUpLoad
                label(for='avatar') Avatar
                input(type="file", name="avatar", id="avatar", accept="image/*")
            input(type="text", placeholder="Name", name="name", value=loggedUser.name)
            input(type="email", name="email", placeholder="Email", value=loggedUser.email)
            input(type="submit", value="Update Profile")