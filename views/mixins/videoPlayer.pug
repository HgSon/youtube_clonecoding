mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__control__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span
                    span#jsCurrentTime 00:00:00
                    |/ 
                    span#jsTotalTime &nbsp;00:00:00   
                input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" step="0.1" value="0.5")             
            .videoPlayer__control__column
                span#jsPlayBtn
                    i.fas.fa-play                
            .videoPlayer__control__column
                span#jsFullScrnBtn
                    i.fas.fa-expand